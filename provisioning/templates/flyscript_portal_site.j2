WSGISocketPrefix /var/run/wsgi
WSGIPythonHome /flyscript/virtualenv

<VirtualHost *:80>
    WSGIPassAuthorization On
	Alias /static /flyscript/flyscript_portal/static
	WSGIScriptAlias / /flyscript/wsgi/flyscript_portal.wsgi
	WSGIDaemonProcess flyscript_portal processes=2
	WSGIProcessGroup flyscript_portal
</VirtualHost>
